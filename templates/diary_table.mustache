{{!
  @template lytix_diary/diary_table

  Lytix diary table.

  The purpose of this template is to render a table for the diary.

  Classes required for JS:
  * lytix_diary/diary

  Data attributes required for JS:
  * none

  Context variables required for this template:
  * none

  Example context (json):
  {
      "entry_date": "17-06-2021",
      "entry_title": "Studied",
      "entry_id": "2"
  }

}}

<table class="table table-responsive table-sm d-table" id="diray-entries-table">
    <thead class='w-100'>
    <tr>
        <th class="header" style="text-align:left" scope="col">{{#str}}entry_date,lytix_diary{{/str}}</th>
        <th class="header" style="text-align:left" scope="col">{{#str}}entry_title, lytix_diary{{/str}}</th>
        <th class="header" style="text-align:right" scope="col">{{#str}}status_diary_entry, lytix_diary{{/str}}</th>
    </tr>
    </thead>
    {{#entries}}
        <tbody class='w-100'>
        <tr>
            <td class="cell text-left" scope="col">{{entry_date}}</td>
            <td class="cell text-left" scope="col"><div class='text-truncate'>{{entry_title}}</div></td>
            <td class="cell" style="text-align:right" scope="col">
                <a href="#" class="editdiaryentry" id="{{entry_id}}" name="edit_diary_entry_button">
                    <i class="icon fa fa-pencil fa-fw" aria-hidden="true"></i>
                </a>
                <a href="#" class="removediaryentry" id="{{entry_id}}" name="delete_diary_entry_button">
                    <i class="icon fa fa-trash fa-fw" aria-hidden="true"></i>
                </a>
            </td>
        </tr>
        </tbody>
    {{/entries}}
</table>
{{^entries}}
    <div class="alert alert-info">{{#str}}diary_entries_missing, lytix_diary{{/str}}</div>
{{/entries}}

<div id="diary-section">
    <h1>
        <a href="#" class="btn btn-default" id="add_diary_entry">
            <i class="icon fa fa-plus fa-fw " aria-hidden="true"></i>
            {{#str}}add_diary_entry, lytix_diary{{/str}}
        </a>
        <a class="btn btn-link p-0" role="button" data-container="body" data-toggle="popover" data-placement="right"
           data-content="&lt;div class=&quot;no-overflow&quot;&gt;&lt;p&gt;{{#str}}add_diary_entry_help, lytix_diary{{/str}}
                   &lt;/p&gt; &lt;/div&gt; " data-html="true" tabindex="0" data-trigger="focus">
            <i class="icon fa fa-question-circle text-info fa-fw " aria-hidden="true" title="{{#str}}add_diary_entry_help, lytix_diary{{/str}}"
               aria-label="{{#str}}add_diary_entry, lytix_diary{{/str}}"></i> </a>
    </h1>
</div>
