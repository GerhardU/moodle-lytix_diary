{{!
  @template lytix_diary/teachers-view

  Lytix Learner’s Diary Widget – Teacher’s View

  This widgets shows the number of diary entries per month.

  Classes required for JS:
  * lytix_diary/teachers-view

  Context variables required for this template:
  See example below.

  Example context (json):
  {
    "bars": [100, 60, 0],
    "counts": [10, 6, 0],
    "months": ["Okt", "Sep"]
  }
}}
<table class='table table-bordered table-sm text-center mb-0'>
    <tr>
        <td></td>
        {{#bars}}
        <td class='align-bottom' style='height: 11em'>
            <div class='ml-auto mr-auto' style='height:{{.}}%; background: var(--teal); width: 2.8em'></div>
        </td>
        {{/bars}}
    </tr>
	<tr>
        <th class='text-right'>{{#str}}entries, lytix_diary{{/str}}</th>
		{{#counts}}
		<td>{{.}}</td>
		{{/counts}}
	</tr>
	<tr>
        <th class='text-right'>{{#str}}month, lytix_diary{{/str}}</th>
        <td>{{#str}}today, lytix_diary{{/str}}</td>
		{{#months}}
		<td>{{.}}</td>
		{{/months}}
	</tr>
</table>
